{% extends 'base-back.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">



        <div class="card">
            <h1 class="card-header">Categorie</h1>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>IdCat</th>
                        <td>{{ categorie.idCat }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ categorie.titre }}</td>
                    </tr>
                    <tr>
                        <th>ImgCat</th>
                        <td><img class="img-rounded" src="{{ asset('images/'~categorie.imgCat) }}" alt="" width="100" height="100" style="margin: 20px"></td>
                    </tr>
                </tbody>
            </table>
                <div class="row" style="margin-top: 10px">
                    <div class="row" style="margin-left: 50px">
                        <div class="col">
                            <a class="btn btn-primary" href="{{ path('app_categorie_edit', {'idCat': categorie.idCat}) }}">edit</a>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary" href="{{ path('app_categorie_index') }}">back to list</a>
                        </div>
                    <div class="row" style="margin-left: 250px">
                        {{ include('categorie/_delete_form.html.twig') }}
                    </div>
        {% endblock %}
