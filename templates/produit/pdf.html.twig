{% block body %}
    <h1 align="center" style="color:green;">Produit</h1>
    <hr>
    <div class="content" >
        <div class="container-fluid">
            <div class="row">
                <div class="col-1">
                    <div class="card-deck">
                        <div class="card-header card-header-primary">
                            <h1 align="center" style="color:blue;">Liste des Produits</h1>

                        </div>
                        <!DOCTYPE html>
                        <html>
                        <head>
                            <style>
                                #customers {
                                    font-family: Arial, Helvetica, sans-serif;
                                    border-collapse: collapse;
                                    width: 100%;
                                }

                                #customers td, #customers th {
                                    border: 1px solid #ddd;
                                    padding: 8px;
                                }

                                #customers tr:nth-child(even) {
                                    background-color: #f2f2f2;
                                }

                                #customers tr:hover {
                                    background-color: #ddd;
                                }

                                #customers th {
                                    padding-top: 12px;
                                    padding-bottom: 12px;
                                    text-align: left;
                                    background-color: royalblue;
                                    color: white;
                                }
                            </style>
                        </head>
                        </html>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="" id="customers" border="2px">
        <thead>
        <tr>


            <th style="text-align: center":> Nom </th>
            <th style="text-align: center">Prix</th>
            <th style="text-align: center">Image</th>
            <th style="text-align: center">Quantite</th>
            <th style="text-align: center">Descprod</th>


        </tr>
        </thead>
        <tbody>
        {% for  produit in produits%}
            <tr>

                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td><img class="img-rounded" src="{{ asset('images/'~produit.image) }}" alt="" width="100" height="100" style="margin: 20px"></td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.descprod| raw }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
    </div>
    </div>
{% endblock %}