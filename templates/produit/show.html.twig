{% extends 'base-back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">



<div class="card">
    <h1 class="card-header">Produit</h1>
    <div class="table-responsive text-nowrap">
        <table class="table">
        <tbody>
            <tr>
                <th>IdProd</th>
                <td>{{ produit.idProd }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-rounded" src="{{ asset('images/'~ produit.image) }}" alt="" width="100" height="100" style="margin: 20px"></td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Descprod</th>
                <td>{{ produit.descprod| raw }}</td>
            </tr>
        </tbody>
    </table>
        <div class="row" style="margin-top: 10px">
            <div class="row" style="margin-left: 50px">
                <div class="col">
                    <a class="btn btn-primary" href="{{ path('app_produit_edit', {'idProd': produit.idProd}) }}">edit</a>
                </div>
                <div class="col">
                    <a class="btn btn-primary" href="{{ path('app_produit_index') }}">back to list</a>
                </div>
            <div class="row" style="margin-left: 250px">
              {{ include('produit/_delete_form.html.twig') }}
            </div>
        </div>

    </div>

</div>
{% endblock %}
