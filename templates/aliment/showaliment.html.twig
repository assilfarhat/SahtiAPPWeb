{% extends 'base-front.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="layout_padding promoted_sectipon">
        <div class="container">
            <h1 class="promoted_text">Nos <span style="border-bottom: 5px solid #4bc714;">aliments</span></h1>
            <div class="images_main">
                <div class="row">
                    {% for aliment in aliments %}
                        <div class="col-sm-6 col-md-6 col-lg-3">
                            <div><img src="{{ asset('images/aliment/'~aliment.image) }}" style="width: 100%; height: 120px"  ></div>
                            <button class="mobile_bt"><a  href="{{ path('alimentfrontItem', {'idAliment': aliment.idAliment}) }}">Afficher L'aliment'</a></button>
                        </div>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>



{% endblock %}

