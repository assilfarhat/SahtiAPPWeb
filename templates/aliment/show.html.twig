{% extends 'base-back.html.twig' %}

{% block title %}Aliment{% endblock %}

{% block body %}
    <h1>Aliment</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>IdAliment</th>
            <td>{{ aliment.idAliment }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ aliment.nom }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ aliment.type }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img style="height: 100px; width: 100px" src="{{ asset('images/aliment/'~aliment.image) }}" ></td>
        </tr>
        <tr>
            <th>Calories</th>
            <td>{{ aliment.calories }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ aliment.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('aliment_index') }}">back to list</a>

    <a href="{{ path('aliment_edit', {'idAliment': aliment.idAliment}) }}">edit</a>

