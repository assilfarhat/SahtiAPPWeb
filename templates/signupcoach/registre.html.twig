

{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

    <section class="vh-100 bg-image"
             style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                                <div class="row">
                                    <div class="col">
                                        {{ form_start(formE ,{'attr': {'novalidate': 'novalidate'}}) }}
                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.nom) }}
                                            {{ form_widget(formE.nom, { 'attr': {'style': 'width: 250px'} })}}
                                        </div>

                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.prenom) }}
                                            {{ form_widget(formE.prenom, { 'attr': {'style': 'width: 250px'} }) }}

                                        </div>

                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.email) }}
                                            {{ form_widget(formE.email, { 'attr': {'style': 'width: 250px'} }) }}
                                        </div>
                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.passwd) }}
                                            {{ form_widget(formE.passwd, { 'attr': {'style': 'width: 250px'} }) }}
                                        </div>

                                        <div class="form-outline mb-4">

                                            {{ form_errors(formE.adresse) }}
                                            {{ form_widget(formE.adresse , { 'attr': {'style': 'width: 250px'} }) }}

                                        </div>

                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.bio) }}
                                            {{ form_widget(formE.bio , { 'attr': {'style': 'width: 250px'} }) }}
                                        </div>

                                    </div>
                                    <div class="col">
                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.certification) }}
                                            {{ form_widget(formE.certification , { 'attr': {'style': 'width: 250px'} }) }}
                                        </div>
                                        <div class="form-outline mb-4">
                                            {{ form_errors(formE.img) }}
                                            {{ form_widget(formE.img , { 'attr': {'style': 'width: 250px'} }) }}
                                        </div>

                                    </div>
                                </div>

                                <div class="d-flex justify-content-center">

                                    {{ form_widget(formE.Registre, { 'attr': {'class': 'btn btn-success btn-block btn-lg gradient-custom-4 text-body'}}) }}

                                </div>
                                <div class="d-flex justify-content-center">

                                    {{ form_widget(formE.Cancel, { 'attr': {'class': 'btn btn-danger btn-block btn-lg gradient-custom-4 text-body'}}) }}

                                </div>
                                {{ form_end(formE) }}
                                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="#!"
                                                                                                        class="fw-bold text-body"><u>Login
                                            here</u></a></p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

