{% extends 'base-back.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    {#                        <h5 class="mb-0">Edit your account</h5>#}
                    {#                        <small class="text-muted float-end">Default label</small>#}
                    <h1>My Profile</h1>

                </div>
                <div class="card-body">
                    <table class="table" >
                        <tbody id="tableac" name="tableac">
                        <tr>
                            <th>Profile Picture</th>
                            <td> <img class="avatar border-gray"  src="{{ asset('uploads/' ~  coach.img ) }}" height="400px" width="400px" ></td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>{{ coach.nom }}</td>
                        </tr>
                        <tr>
                            <th>First Name</th>
                            <td>{{ coach.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ coach.email }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ coach.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Birthday</th>
                            <td>{{ coach.bio  }}</td>
                        </tr>
                        <tr>
                            <th>Birthday</th>
                            <td>{{ coach.certification  }}</td>
                        </tr>

                        </tbody>
                    </table>

                    <a href="{{ path('modifycoach', {'id': coach.id}) }}" class="btn btn-primary"> Edit Account</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
